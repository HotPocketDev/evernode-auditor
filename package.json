{
    "name": "auditor",
    "scripts": {
        "build": "ncc build auditor.js -o dist/auditor",
        "build:installer:pre": "mkdir -p ./dist/auditor-installer && cp -r ./dist/auditor ./dist/auditor-installer/ && cp -r ./installer/auditor-install.sh ./dist/auditor-installer/ && cp -r ./installer/auditor-uninstall.sh ./dist/auditor-installer/",
        "build:installer": "npm run build && npm run build:installer:pre && tar cfz ./dist/auditor-installer.tar.gz --directory=./dist auditor-installer && rm -r ./dist/auditor-installer"
    },
    "dependencies": {
        "sqlite3": "^5.0.2",
        "eccrypto": "^1.1.6",
        "ripple-lib": "^1.9.8"
    }
}
